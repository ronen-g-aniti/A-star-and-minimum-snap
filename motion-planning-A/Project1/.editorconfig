# .editorconfig

# Set the root to true to indicate that this is the root configuration file.
root = true

# All files
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# C++ files
[*.cpp]
max_line_length = 100

# C++ headers
[*.h]
max_line_length = 100
